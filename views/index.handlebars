<!-- Pass in data from server.js -->



<h2>Burgers to Devour</h2>

  <ul>
  {{#each burgersData}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-burger" data-id="{{id}}" data-devoured="{{devoured}}">
		{{#if devoured}}DEVOUR!{{/if}}
	</button>

	<button id="deleteBurger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

 

